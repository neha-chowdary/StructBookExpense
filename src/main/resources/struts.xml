<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<!-- Define an action for creating an student-->
	<package name="expense" extends="struts-default">
		<action name="AddExpenseAction"
			class="com.actions.AddExpenseAction" method="add">
			<result name="success">/index.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="updateExpenseAction"
			class="com.actions.updateExpenseAction" method="update">
			<result name="success">/listExpenses.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="deleteExpenseAction"
			class="com.actions.deleteExpenseAction" method="delete">
			<result name="success">/listExpenses.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
	</package>

</struts>
